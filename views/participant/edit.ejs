<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Редагування форми участі</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/confs/<%= conf_id %>/participants/<%= participant._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="participant[name]" value="<%= participant.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="participant[interests]"
                        value="<%= participant.interests %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Підтвердити</button>
                </div>
            </form>
            <a href="/confs">Повернутися</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>