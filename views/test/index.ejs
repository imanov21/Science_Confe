<%- include("../partials/header") %>
  <h2 class="text-center my-3">Результати до опитувань</h2>
  <div class="container">
    <div class="row text-center">
	   <% confs.forEach(function(conf){ %>
			<% if(currentUser && conf.author.id.equals(currentUser._id)){ %>
				<% if (conf.testResults.length > 0) { %>
					<% conf.testResults.forEach(function(testResult){ %>
					  <div class="col-sm-6 col-md-4 col-lg-3 my-3">
						<div class="card bg-lw p-0">
						  <div class="caption">
							<h4>Результати до конференції </h4>
							<h4><%= conf.name %></h4>
						  </div>
						  <hr>
						  <p>
							<a>Відправленно <%= testResult.sender.username %></a>
						  </p>
						  <hr>
						  <p>
							<a href="/test/<%= testResult._id %>" class="btn btn-outline-primary">Детальніше</a>
						  </p>
						</div>
					  </div>
    </div>
					<% });%>
    <hr>
    			<% } else { %> 
    <h4 class="text-center">У вас не має результатів опитувань до <%= conf.name %></h4>
    <hr>
				<% } %>
			<% } %>
    	<% }); %>
  </div>
<%- include("../partials/footer") %>